{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {% embed 'shared/blocks/_content_block.html.twig' %}
                {% block body %}
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-xs-12 no-margin">
                                {% if status_code == '404' %}
                                    <h1>{{ status_code }} - pagina niet gevonden</h1>
                                {% else %}
                                    <h1>A wild {{ status_code }} error page appeared!</h1>
                                {% endif %}
                            </div>
                            <div class="col-xs-12">
                                <p><a href="{{ path('app_homepage') }}">Klik hier</a> om terug naar de homepagina te gaan.</p>
                            </div>
                        </div>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock %}